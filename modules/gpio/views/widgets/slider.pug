//- widgets/slider.pug
div(
  class=item.type + '_controls gpio-item-slider-wrapper ' + thumbColor
)
  input.gpio-item-slider&attributes({
    id: name.replace(/[^A-zA-Z0-9]/, '_') + (item.type == 'RGBLED' ? '_' + thumbColor : '') + '_slider',
    type: 'range',
    name: name.replace(/[^A-zA-Z0-9]/, '_') + (item.type == 'RGBLED' ? '_' + thumbColor : '') + '_slider',
    min: item.range.min,
    max: item.range.max,
    value: 0,
    'data-group': group,
    'data-name': name,
    'data-type': item.type
  })
