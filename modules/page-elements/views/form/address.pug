//- widgets/form/address.pug
mixin address(pretext, groupname, fieldprefix)
  + group(pretext, groupname, [{
      type: 'text',
      name: fieldprefix + 'street',
      attr: { placeholder: __('Street') }
    },
    {
      type: 'text',
      name: fieldprefix + 'housenumber',
      attr: { placeholder: __('Number') }
    },
    {
      type: 'text',
      name: fieldprefix + 'zip',
      attr: { placeholder: __('Zip') }
    },
    {
      type: 'text',
      name: fieldprefix + 'city',
      attr: { placeholder: __('City') }
    }]
  )
